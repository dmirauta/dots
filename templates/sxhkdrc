
## wm independent hotkeys ##

# terminal emulator
super + Return
	alacritty

# program launcher
super + @space
	rofi -show combi -combi-modes "drun,window,filebrowser" -modes combi -monitor -1 # currently focused monitor

# make sxhkd reload its configuration files
super + Escape
	pkill -USR1 -x sxhkd

# screenshot
alt + shift + s
	spectacle --region -b

# delayed screenshot (4 sec)
alt + shift + d
	spectacle --region -b -d 4000

# lockscreen
super + l
	XSECURELOCK_COMPOSITE_OBSCURER=0 xsecurelock

## Function keys ##

# Media
XF86Audio{Play,Stop,Prev,Next}
   playerctl {play-pause,stop,previous,next}

# Change volume
XF86Audio{RaiseVolume,LowerVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {+5%,-5%}

# Change audio out
ctrl + shift + s
  bash $SCRIPTS/change_sink.sh

ctrl + shift + b
  bash $SCRIPTS/cheat_sheet.sh

# Mute
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# Screen brightness
XF86MonBrightness{Down,Up}
    brightnessctl set {10%-,+10%}


## bspwm hotkeys ##

#### Begin Directional (Window motions)

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# cycle to next/prev desktop
super + ctrl + {Left,Right}
	bspc desktop -f {prev,next}.local

# move node to next/prev desktop and follow
super + ctrl + shift + {Left,Right}
   bspc node -d {prev,next}.local --follow

# focus the next/prev monitor
super + alt {Left,Right}
	bspc monitor -f {prev,next}

# move node to next/prev monitor and follow
super + alt + shift {Left,Right}
   bspc node -m {prev,next} --follow

# expand a window by moving one of its side outward
super + alt + ctrl + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + ctrl + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# preselect split direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# move a floating window
super + alt + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#### End Directional

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel


## unused/obscure (from example) ##

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

## focus the last node/desktop
#super + {grave,Tab}
#	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

